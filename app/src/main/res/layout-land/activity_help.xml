<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.doireann.mealme.HelpActivity"
    android:background="@color/suggestList">

    <TextView
        android:id="@+id/id_help_suggest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="18dp"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/helpSuggest"
        android:background="@color/suggestListDark"/>

    <TextView
        android:id="@+id/id_help_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/app_margin"
        android:textSize="18dp"
        android:text="@string/helpSearch"
        android:background="@color/searchListDark"/>

</LinearLayout>

